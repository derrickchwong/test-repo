datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Owner {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  city      String
  telephone String
  pets      Pet[]
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  birthDate DateTime
  type      PetType  @relation(fields: [typeId], references: [id])
  typeId    Int
  owner     Owner    @relation(fields: [ownerId], references: [id])
  ownerId   Int
}

model PetType {
  id   Int    @id @default(autoincrement())
  name String @unique
  pets Pet[]
}